<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <span><%= @user.microposts.count %> microposts</span>
            <span><%= link_to "#{@user.following_users.count} following", following_user_path %></span>
            <span><%= link_to "#{@user.follower_users.count} followers", followers_user_path %></span>
        </section>
        <div>
            <strong>Location: </strong><%= @user.location %>
        </div>
        <div>
            <strong>Description: </strong><%= @user.description %>
        </div>
        <div>
            <% if current_user == @user %>
                <%= link_to "edit profile" , edit_user_path, class: "btn btn-success" if logged_in? %>
            <% end %>
        </div>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <h3>
            Microposts (<%= @user.microposts.count %>)
        </h3>
        <%= render 'shared/feed' %>
    </div>
</div>
